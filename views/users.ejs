<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản lý người dùng</title>
    <style>
        body {
            font-family: Arial;
            background: #f4f4f4;
            padding: 30px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
            vertical-align: middle;
        }
        th {
            background-color: #343a40;
            color: white;
        }
        /* Styles cho các nút */
        .btn {
            padding: 6px 12px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease, opacity 0.3s ease;
        }
        .btn-suspend { /* Màu đỏ cho nút Đình chỉ */
            background: #dc3545;
            color: white;
        }
        .btn-suspend:hover {
            background: #c82333;
        }
        .btn-unsuspend { /* Màu xanh lá cây cho nút Mở đình chỉ */
            background: #28a745;
            color: white;
        }
        .btn-unsuspend:hover {
            background: #218838;
        }
        .btn:disabled { /* Khi nút bị vô hiệu hóa */
            opacity: 0.7;
            cursor: not-allowed;
        }

        /* Styles cho trạng thái */
        .status-active {
            color: #28a745;
            font-weight: bold;
        }
        .status-suspended {
            color: #dc3545;
            font-weight: bold;
        }

        .back-button {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .back-button:hover {
            background-color: #0056b3;
        }

        /* Style cho phần thống kê */
        .statistics {
            margin-top: 30px;
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center;
        }
        .statistics h2 {
            color: #343a40;
            margin-bottom: 15px;
        }
        .stat-item {
            display: inline-block;
            margin: 0 20px;
            font-size: 1.1em;
            color: #555;
        }
        .stat-item strong {
            color: #007bff;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <a href="/admin/dashboard" class="back-button">← Quay lại Dashboard</a>
    <h1>Danh sách người dùng</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Số điện thoại</th> <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr id="user-<%= user._id %>">
                    <td><%= user._id %></td>
                    <td><%= user.fullname || user.email %></td>
                    <td><%= user.email %></td>
                    <td><%= user.numberphone || 'N/A' %></td> <td id="status-<%= user._id %>">
                        <span class="<%= user.isSuspended ? 'status-suspended' : 'status-active' %>">
                            <%= user.isSuspended ? "Đã đình chỉ" : "Đang hoạt động" %>
                        </span>
                    </td>
                    <td>
                        <button type="button"
                                class="btn <%= user.isSuspended ? 'btn-unsuspend' : 'btn-suspend' %> toggle-suspend-btn"
                                data-user-id="<%= user._id %>"
                                data-is-suspended="<%= user.isSuspended %>">
                            <%= user.isSuspended ? "Mở đình chỉ" : "Đình chỉ" %>
                        </button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="statistics">
        <h2>Thống kê tài khoản</h2>
        <div class="stat-item">
            Tài khoản chính (Parent): <strong><%= parentCount %></strong>
        </div>
        <div class="stat-item">
            Tài khoản phụ (Subuser): <strong><%= subuserCount %></strong>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleSuspendButtons = document.querySelectorAll('.toggle-suspend-btn');

            toggleSuspendButtons.forEach(button => {
                button.addEventListener('click', async (event) => {
                    const userId = event.target.dataset.userId;
                    const isCurrentlySuspended = event.target.dataset.isSuspended === 'true';

                    const actionText = isCurrentlySuspended ? 'mở đình chỉ' : 'đình chỉ';
                    const confirmMessage = `Bạn có chắc chắn muốn ${actionText} người dùng này (ID: ${userId})?`;

                    if (!confirm(confirmMessage)) {
                        return;
                    }

                    try {
                        const response = await fetch(`/admin/users/${userId}/toggle-suspension`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const data = await response.json();

                        if (response.ok && data.success) {
                            const statusCell = document.getElementById(`status-${userId}`);
                            const buttonElement = event.target;

                            if (statusCell) {
                                if (data.isSuspended) {
                                    statusCell.innerHTML = '<span class="status-suspended">Đã đình chỉ</span>';
                                } else {
                                    statusCell.innerHTML = '<span class="status-active">Đang hoạt động</span>';
                                }
                            }

                            if (buttonElement) {
                                buttonElement.dataset.isSuspended = data.isSuspended;
                                if (data.isSuspended) {
                                    buttonElement.textContent = 'Mở đình chỉ';
                                    buttonElement.classList.remove('btn-suspend');
                                    buttonElement.classList.add('btn-unsuspend');
                                } else {
                                    buttonElement.textContent = 'Đình chỉ';
                                    buttonElement.classList.remove('btn-unsuspend');
                                    buttonElement.classList.add('btn-suspend');
                                }
                            }
                            alert(`${actionText} người dùng thành công!`);

                        } else {
                            alert(`Lỗi khi ${actionText} người dùng: ${data.message || 'Không rõ lỗi.'}`);
                            console.error('Server error:', data);
                        }
                    } catch (error) {
                        console.error('Lỗi mạng hoặc lỗi gửi request:', error);
                        alert('Đã xảy ra lỗi khi kết nối đến server. Vui lòng thử lại.');
                    }
                });
            });
        });
    </script>
</body>
</html>